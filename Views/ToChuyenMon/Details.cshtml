@model QLDuAn.Models.ToChuyenMon

@{
    ViewData["Title"] = "Chi tiết tổ chuyên môn";
}

<h2>Chi tiết tổ: @Model.TenTo</h2>

<h4>Thành viên tổ</h4>
@if (Model.NguoiDungs != null && Model.NguoiDungs.Any())
{
    <ul>
        @foreach (var nd in Model.NguoiDungs)
        {
            <li>@nd.HoTen (@nd.Email)</li>
        }
    </ul>
}
else
{
    <p class="text-muted">Chưa có thành viên.</p>
}

<h4 class="mt-4">Công việc tổ phụ trách</h4>
@if (Model.CongViecs != null && Model.CongViecs.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên công việc</th>
                <th>Giai đoạn</th>
                <th>Trạng thái</th>
                <th>Deadline</th>
                <th>Người thực hiện</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cv in Model.CongViecs)
            {
                <tr>
                    <td>@cv.TenCongViec</td>
                    <td>@cv.GiaiDoan</td>
                    <td>@cv.TrangThai</td>
                    <td>@(cv.Deadline.HasValue? cv.Deadline.Value.ToString("dd/MM/yyyy") : "")</td>
                    <td>@cv.MaNguoiDungNavigation?.HoTen</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Chưa có công việc.</p>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>