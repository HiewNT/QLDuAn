@model QLDuAn.Models.ToChuyenMon

@{
    ViewData["Title"] = "Chỉnh sửa tổ chuyên môn";
}

<h2>Chỉnh sửa tổ chuyên môn</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaTo" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TenTo" class="control-label"></label>
        <input asp-for="TenTo" class="form-control" />
        <span asp-validation-for="TenTo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}