@model QLDuAn.Models.ToChuyenMon

@{
    ViewData["Title"] = "Gán nhân sự vào tổ";
    var toChuyenMon = ViewBag.ToChuyenMon as QLDuAn.Models.ToChuyenMon;
}

<h2>Gán nhân sự - @toChuyenMon.TenTo</h2>

<form asp-action="AssignMembers" method="post">
    <input type="hidden" name="id" value="@toChuyenMon.MaTo" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label">Chọn nhân sự</label>
        <select name="maNguoiDungs" class="form-control" multiple asp-items="ViewBag.NguoiDungList"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}