@using System.Security.Claims
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-2 fw-bold text-primary">
                <i class="bi bi-speedometer2 me-2"></i>Bảng điều khiển quản trị
            </h1>
            <p class="text-muted">Tổng quan hệ thống quản lý dự án</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-2 col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title text-muted mb-2">Người dùng</h5>
                            <h2 class="fw-bold mb-0">@ViewBag.SoNguoiDung</h2>
                        </div>
                        <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <a href="@Url.Action("Index", "NguoiDung")" class="stretched-link mt-3 d-block text-primary">
                        <i class="bi bi-arrow-right-circle me-1"></i>Quản lý người dùng
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title text-muted mb-2">Dự án</h5>
                            <h2 class="fw-bold mb-0">@ViewBag.SoDuAn</h2>
                        </div>
                        <i class="bi bi-folder text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <a href="@Url.Action("Index", "DuAn")" class="stretched-link mt-3 d-block text-primary">
                        <i class="bi bi-arrow-right-circle me-1"></i>Quản lý dự án
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title text-muted mb-2">Công việc</h5>
                            <h2 class="fw-bold mb-0">@ViewBag.SoCongViec</h2>
                        </div>
                        <i class="bi bi-check-circle text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <a href="@Url.Action("Index", "CongViec")" class="stretched-link mt-3 d-block text-primary">
                        <i class="bi bi-arrow-right-circle me-1"></i>Quản lý công việc
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title text-muted mb-2">Tài liệu</h5>
                            <h2 class="fw-bold mb-0">@ViewBag.SoTaiLieu</h2>
                        </div>
                        <i class="bi bi-file-earmark-text text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <a href="@Url.Action("Index", "TaiLieu")" class="stretched-link mt-3 d-block text-primary">
                        <i class="bi bi-arrow-right-circle me-1"></i>Quản lý tài liệu
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-md-6 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title text-muted mb-2">Tổ chuyên môn</h5>
                            <h2 class="fw-bold mb-0">@ViewBag.SoTo</h2>
                        </div>
                        <i class="bi bi-diagram-3 text-primary" style="font-size: 2rem;"></i>
                    </div>
                    <a href="@Url.Action("Index", "ToChuyenMon")" class="stretched-link mt-3 d-block text-primary">
                        <i class="bi bi-arrow-right-circle me-1"></i>Quản lý tổ chuyên môn
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-5 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="bi bi-calendar-event me-2"></i>Lịch công việc sản xuất & hậu kỳ
                    </h5>
                </div>
                <div class="card-body p-3">
                    <a href="@Url.Action("Index", "Lich")" class="stretched-link">
                        <div id="miniCalendar"></div>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-7 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0 text-dark">
                        <i class="bi bi-bar-chart me-2"></i>Chi tiết dự án
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Tên dự án</th>
                                    <th class="text-center">Trạng thái</th>
                                    <th class="text-center">Công việc</th>
                                    <th class="text-center">Hoàn thành</th>
                                    <th>Tiến độ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var duAn in ViewBag.DuAnProgress)
                                {
                                    var progressPercentage = duAn.TongCV > 0 ? Math.Round((double)duAn.HoanThanh / duAn.TongCV * 100) : 0;
                                    var statusClass = duAn.TrangThai switch
                                    {
                                        "Đang thực hiện" => "warning",
                                        "Hoàn thành" => "success",
                                        "Chuẩn bị" => "secondary",
                                        _ => "secondary"
                                    };
                                    <tr>
                                        <td>@duAn.TenDuAn</td>
                                        <td class="text-center">
                                            <span class="badge bg-@statusClass">@duAn.TrangThai</span>
                                        </td>
                                        <td class="text-center">@duAn.TongCV</td>
                                        <td class="text-center">@duAn.HoanThanh</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar bg-@statusClass" role="progressbar" style="width: @progressPercentage%" aria-valuenow="@progressPercentage" aria-valuemin="0" aria-valuemax="100">
                                                    @progressPercentage%
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('miniCalendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                height: 450,
                locale: 'vi',
                headerToolbar: false, // Hide default toolbar
                dayCellContent: function(arg) {
                    if (arg.date.toDateString() === new Date().toDateString()) {
                        return { html: `<span class="text-danger fw-bold">${arg.dayNumberText}</span>` };
                    }
                    return { html: arg.dayNumberText };
                },
                dayRender: function(info) {
                    if (info.view.type === 'dayGridMonth' && info.isToday) {
                        var todayCell = info.el.querySelector('.fc-daygrid-day-number');
                        if (todayCell) {
                            todayCell.innerHTML = `<span class="text-danger fw-bold">${info.dayNumberText}</span>`;
                        }
                    }
                },
                datesSet: function(info) {
                    var events = calendar.getEvents();
                    var statusDiv = document.createElement('div');
                    statusDiv.className = 'text-muted mt-2';
                    // Remove any existing status div to avoid duplication
                    var existingStatus = calendarEl.querySelector('.text-muted.mt-2');
                    if (existingStatus) existingStatus.remove();
                    calendarEl.appendChild(statusDiv);
                },
                events: '/Lich/GetCongViecLich',
                eventDidMount: function(info) {
                    if (info.event.extendedProps.giaiDoan === "Sản xuất") {
                        info.el.style.backgroundColor = "#0dcaf0";
                        info.el.style.borderColor = "#0dcaf0";
                        info.el.style.color = "#000";
                    }
                    if (info.event.extendedProps.giaiDoan === "Hậu kỳ") {
                        info.el.style.backgroundColor = "#ffc107";
                        info.el.style.borderColor = "#ffc107";
                        info.el.style.color = "#000";
                    }
                },
                editable: false,
                eventClick: function(info) {
                    window.location.href = '@Url.Action("Index", "Lich")';
                }
            });
            calendar.render();
            calendar.gotoDate(new Date()); // Set calendar to current date
        });
    </script>
}