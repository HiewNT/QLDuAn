@model QLDuAn.Models.CongViec
@{
    ViewData["Title"] = "Tạo công việc mới";
    var duAnList = ViewBag.DuAnList as SelectList;
    var nguoiDungList = ViewBag.NguoiDungList as SelectList;
    var toList = ViewBag.ToList as SelectList;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0 mb-2">
                    <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Công việc</a></li>
                    <li class="breadcrumb-item active">Tạo mới</li>
                </ol>
            </nav>
            <h2 class="h3 mb-0">Tạo công việc mới</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post" class="card shadow-sm">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="TenCongViec" class="form-label required">Tên công việc</label>
                        <input asp-for="TenCongViec" class="form-control" />
                        <span asp-validation-for="TenCongViec" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MaDuAn" class="form-label required">Dự án</label>
                            <select asp-for="MaDuAn" asp-items="duAnList" class="form-select">
                                <option value="">-- Chọn dự án --</option>
                            </select>
                            <span asp-validation-for="MaDuAn" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="GiaiDoan" class="form-label required">Giai Đoạn</label>
                            <select asp-for="GiaiDoan" class="form-select">
                                <option value="">-- Chọn giai đoạn --</option>
                                <option value="Tiền kỳ">Tiền kỳ</option>
                                <option value="Sản xuất">Sản xuất</option>
                                <option value="Hậu kỳ">Hậu kỳ</option>
                            </select>
                            <span asp-validation-for="GiaiDoan" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MaNguoiDung" class="form-label required">Người thực hiện</label>
                            <select asp-for="MaNguoiDung" asp-items="nguoiDungList" class="form-select">
                                <option value="">-- Chọn người thực hiện --</option>
                            </select>
                            <span asp-validation-for="MaNguoiDung" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MaTo" class="form-label">Tổ chuyên môn</label>
                            <select asp-for="MaTo" asp-items="toList" class="form-select">
                                <option value="">-- Chọn tổ --</option>
                            </select>
                            <span asp-validation-for="MaTo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="NgayBatDau" class="form-label required">Ngày bắt đầu</label>
                            <input asp-for="NgayBatDau" type="date" class="form-control" />
                            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Deadline" class="form-label required">Deadline</label>
                            <input asp-for="Deadline" type="date" class="form-control" />
                            <span asp-validation-for="Deadline" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TrangThai" class="form-label">Trạng thái</label>
                            <input asp-for="TrangThai" class="form-control" value="Chưa bắt đầu" readonly />
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i>Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>Lưu
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Hướng dẫn
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Vui lòng điền đầy đủ thông tin được đánh dấu <span class="text-danger">*</span></p>
                    <ul class="mb-0">
                        <li>Chọn dự án từ danh sách có sẵn</li>
                        <li>Phân công người thực hiện</li>
                        <li>Công việc mới tạo thì chưa bắt đầu làm</li>
                        <li>Đặt deadline phù hợp</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .required:after {
            content: " *";
            color: red;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}